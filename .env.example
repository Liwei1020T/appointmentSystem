# ========================================
# DATABASE
# ========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/string_service?schema=public"

# ========================================
# NEXTAUTH.JS
# ========================================
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# APPLICATION
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=String Service Platform

# ========================================
# FILE UPLOAD
# ========================================
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5

# ========================================
# PAYMENT SETTINGS (TNG QR Code Manual Payment)
# ========================================
# TNG QR Code URL (本地文件或外部URL)
NEXT_PUBLIC_TNG_QR_CODE_URL=/images/tng-qr-code.png

# 支付超时时间（分钟）
PAYMENT_TIMEOUT_MINUTES=30

# Gate TNG callback endpoint (default disabled)
TNG_CALLBACK_ENABLED="false"

# ========================================
# SMS NOTIFICATIONS
# ========================================
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+60123456789"

# ========================================
# PHONE OTP AUTH (方案B)
# ========================================
# Optional secret used to hash OTP codes (falls back to NEXTAUTH_SECRET if not set)
OTP_SECRET="your-otp-secret"

# Dev helper: when true (and not production), OTP request API returns `devCode` for testing
SMS_DEV_RETURN_CODE="false"

# ========================================
# WEB PUSH NOTIFICATIONS
# ========================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# ========================================
# EMAIL (Optional)
# ========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="String Service <noreply@stringservice.com>"

# ========================================
# APP CONFIGURATION
# ========================================
POINTS_PER_ORDER=10
REFERRAL_REWARD_POINTS=50
LOW_STOCK_THRESHOLD=5
