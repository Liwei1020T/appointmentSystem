# ========================================
# DATABASE
# ========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/string_service?schema=public"

# ========================================
# NEXTAUTH.JS
# ========================================
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# APPLICATION
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=String Service Platform

# ========================================
# FILE UPLOAD
# ========================================
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5

# ========================================
# PAYMENT SETTINGS (TNG QR Code Manual Payment)
# ========================================
# TNG QR Code URL (本地文件或外部URL)
NEXT_PUBLIC_TNG_QR_CODE_URL=/images/tng-qr-code.png

# 收款账户信息
NEXT_PUBLIC_PAYMENT_ACCOUNT_NAME=ArtSport String Service
NEXT_PUBLIC_PAYMENT_ACCOUNT_PHONE=+60123456789
NEXT_PUBLIC_PAYMENT_ACCOUNT_EMAIL=payment@artsport.com

# 支付超时时间（分钟）
PAYMENT_TIMEOUT_MINUTES=30

# ========================================
# SMS NOTIFICATIONS
# ========================================
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ========================================
# WEB PUSH NOTIFICATIONS
# ========================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# ========================================
# EMAIL (Optional)
# ========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="String Service <noreply@stringservice.com>"

# ========================================
# APP CONFIGURATION
# ========================================
POINTS_PER_ORDER=10
REFERRAL_REWARD_POINTS=50
LOW_STOCK_THRESHOLD=5
